  <process id="BasicResourceDeletion" name="BasicResourceDeletion" isExecutable="true">
    <startEvent id="startevent1" name="Start"></startEvent>
    <endEvent id="endevent1" name="End"></endEvent>
    <sequenceFlow id="flow0" sourceRef="startevent1" targetRef="scripttask0"></sequenceFlow>
    <scriptTask id="scripttask0" name="Call Remediate Script" scriptFormat="groovy" flowable:autoStoreVariables="false">
      <script>
  def content = execution.getVariables();
  def requestId = content.id;
  def requestIndex = openidm.action('iga/governance/request/' + requestId, 'GET', [:], [:]);
  if(requestIndex) {
    def request = requestIndex.request;
    def resource = openidm.action('iga/governance/resource/' + request.common.resourceId, 'GET', [:]);
    if(resource.igaContent) {
      def result = openidm.action('iga/governance/application/' + resource.applicationId + '/__GROUP__/' + request.common.resourceId, 'DELETE', [:]);
      execution.setVariables(result);
    } else {
      execution.setVariables([message: 'account not found']);
    }
  } else {
    execution.setVariables([message: 'request not found']);
  }      
  </script>
    </scriptTask>
    <sequenceFlow id="flow1" sourceRef="scripttask0" targetRef="endevent1"></sequenceFlow>
  </process>
